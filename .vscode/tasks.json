{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "swa start",
            "command": "swa start",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "Waiting for .+5000 to be ready"
                    }
                }
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": []
        },
        // Catalog service configs
        {
            "label": "build-catalog",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Backend/Catalog/Catalog.API/Catalog.API.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "appId": "catalog",
            "appPort": 6000,
            "httpPort": 36502,
            "label": "dapr-debug-catalog",
            "type": "dapr",
            "dependsOn": "build-catalog"
        },
        {
            "appId": "catalog",
            "label": "daprd-down-catalog",
            "type": "daprd-down"
        },
        // YARP service configs
        {
            "label": "build-yarp",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Backend/APIGateways/YARP/YARP.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "appId": "yarp",
            "appPort": 5000,
            "httpPort": 36501,
            "label": "dapr-debug-yarp",
            "type": "dapr",
            "dependsOn": "build-yarp"
        },
        {
            "appId": "yarp",
            "label": "daprd-down-yarp",
            "type": "daprd-down"
        }
    ]
}